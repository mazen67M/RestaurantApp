    private async Task AssignDelivery()
    {
        if (IsProcessing) return;
        
        if (!AssignOrderId.HasValue || !SelectedDeliveryId.HasValue)
        {
            await ShowMessageAsync("Please select a delivery driver", "error");
            return;
        }

        IsProcessing = true;
        StateHasChanged();

        try
        {
            var success = await DeliveryApi.AssignDeliveryToOrderAsync(AssignOrderId.Value, SelectedDeliveryId.Value);
            if (success)
            {
                await ShowMessageAsync("Delivery assigned successfully!", "success");
                
                // Update local state for immediate feedback
                var driverName = AvailableDeliveries?.FirstOrDefault(d => d.Id == SelectedDeliveryId.Value)?.NameEn;

                if (SelectedOrder != null && SelectedOrder.Id == AssignOrderId.Value)
                {
                    SelectedOrder.Status = "Delivered";
                    SelectedOrder.DeliveryName = driverName;
                }
                
                var listOrder = Orders.FirstOrDefault(o => o.Id == AssignOrderId.Value);
                if (listOrder != null)
                {
                    listOrder.Status = "Delivered";
                    listOrder.DeliveryName = driverName;
                }
                
                CloseAssignModal();
                await LoadData();
            }
            else
            {
                await ShowMessageAsync("Failed to assign delivery", "error");
            }
        }
        catch (Exception ex)
        {
            await ShowMessageAsync($"Error assigning delivery: {ex.Message}", "error");
        }
        finally
        {
            IsProcessing = false;
            StateHasChanged();
        }
    }

