@page "/admin/kitchen"
@using Microsoft.AspNetCore.SignalR.Client
@using RestaurantApp.Web.Services
@inject OrderApiService OrderApi
@inject IJSRuntime JSRuntime
@implements IAsyncDisposable
@rendermode InteractiveServer

<PageTitle>Kitchen Display - Restaurant Admin</PageTitle>

<div class="kitchen-display">
    <!-- Header -->
    <div class="kitchen-header">
        <h1><i class="bi bi-fire"></i> Kitchen Display</h1>
        <div class="kitchen-stats">
            <div class="stat-card">
                <span class="stat-value">@PendingOrders.Count</span>
                <span class="stat-label">Pending</span>
            </div>
            <div class="stat-card preparing">
                <span class="stat-value">@PreparingOrders.Count</span>
                <span class="stat-label">Preparing</span>
            </div>
            <button class="btn btn-outline-light" @onclick="RefreshOrders">
                <i class="bi bi-arrow-clockwise"></i> Refresh
            </button>
        </div>
    </div>

    <!-- Orders Grid -->
    <div class="orders-grid">
        @if (IsLoading)
        {
            <div class="loading-spinner">
                <div class="spinner-border text-warning" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p>Loading orders...</p>
            </div>
        }
        else if (!AllOrders.Any())
        {
            <div class="no-orders">
                <i class="bi bi-check-circle"></i>
                <h3>All caught up!</h3>
                <p>No orders to prepare right now.</p>
            </div>
        }
        else
        {
            @foreach (var order in AllOrders.OrderBy(o => o.CreatedAt))
            {
                <div class="order-card @GetOrderCardClass(order.Status)">
                    <div class="order-header">
                        <div>
                            <h3>@order.OrderNumber</h3>
                            <span class="order-time">
                                <i class="bi bi-clock"></i> @GetTimeAgo(order.CreatedAt)
                            </span>
                        </div>
                        <span class="order-type @order.OrderType.ToLower()">
                            <i class="bi @(order.OrderType == "Delivery" ? "bi-truck" : "bi-bag")"></i>
                            @order.OrderType
                        </span>
                    </div>

                    <div class="order-items">
                        <h4>Items (@order.ItemCount)</h4>
                        <ul class="item-list">
                            @foreach (var item in (order.Items ?? new List<OrderItemSummaryDto>()))
                            {
                                <li>
                                    <div class="item-main">
                                        <span class="quantity">@item.Quantity x</span>
                                        <span class="name">@item.MenuItemNameEn</span>
                                    </div>
                                    @if (item.AddOns != null && item.AddOns.Any())
                                    {
                                        <div class="item-addons">
                                            <i class="bi bi-plus-circle"></i> @string.Join(", ", item.AddOns.Select(a => a.NameEn))
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(item.Notes))
                                    {
                                        <div class="item-notes">
                                            <i class="bi bi-sticky"></i> @item.Notes
                                        </div>
                                    }
                                </li>
                            }
                        </ul>
                    </div>

                    <div class="order-footer">
                        @if (order.Status == "Confirmed")
                        {
                            <button class="btn btn-warning btn-lg w-100" @onclick="@(() => StartPreparing(order.Id))">
                                <i class="bi bi-play-circle"></i> Start Preparing
                            </button>
                        }
                        else if (order.Status == "Preparing")
                        {
                            <button class="btn btn-success btn-lg w-100" @onclick="@(() => MarkAsReady(order.Id))">
                                <i class="bi bi-check-circle"></i> Mark as Ready
                            </button>
                        }
                    </div>
                </div>
            }
        }
    </div>
</div>

@code {
    private bool IsLoading { get; set; } = true;
    private List<OrderDto> AllOrders { get; set; } = new();
    private HubConnection? _hubConnection;

    private List<OrderDto> PendingOrders => AllOrders.Where(o => o.Status == "Confirmed").ToList();
    private List<OrderDto> PreparingOrders => AllOrders.Where(o => o.Status == "Preparing").ToList();

    protected override async Task OnInitializedAsync()
    {
        await LoadOrders();
        await InitializeSignalR();
        
        // Auto-refresh every 30 seconds
        _ = Task.Run(async () =>
        {
            while (true)
            {
                await Task.Delay(30000);
                await InvokeAsync(async () => await LoadOrders());
            }
        });
    }

    private async Task LoadOrders()
    {
        IsLoading = true;
        try
        {
            var allOrders = await OrderApi.GetOrdersAsync();
            // Only show Confirmed and Preparing orders
            AllOrders = allOrders.Where(o => o.Status == "Confirmed" || o.Status == "Preparing").ToList();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading orders: {ex.Message}");
        }
        finally
        {
            IsLoading = false;
            StateHasChanged();
        }
    }

    private async Task InitializeSignalR()
    {
        try
        {
            var apiUrl = "http://localhost:5009/";
            _hubConnection = new HubConnectionBuilder()
                .WithUrl($"{apiUrl}hubs/orders")
                .WithAutomaticReconnect()
                .Build();

            _hubConnection.On<object>("NewOrder", async (order) =>
            {
                await LoadOrders();
                await PlayNotificationSound();
            });

            _hubConnection.On<object>("OrderStatusUpdated", async (update) =>
            {
                await LoadOrders();
            });

            await _hubConnection.StartAsync();
            await _hubConnection.InvokeAsync("JoinKitchenGroup");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"SignalR Error: {ex.Message}");
        }
    }

    private async Task StartPreparing(int orderId)
    {
        await OrderApi.UpdateOrderStatusAsync(orderId, "Preparing");
        await LoadOrders();
    }

    private async Task MarkAsReady(int orderId)
    {
        await OrderApi.UpdateOrderStatusAsync(orderId, "Ready");
        await LoadOrders();
    }

    private async Task RefreshOrders()
    {
        await LoadOrders();
    }

    private async Task PlayNotificationSound()
    {
        try
        {
            await JSRuntime.InvokeVoidAsync("playNotificationSound");
        }
        catch { }
    }

    private string GetOrderCardClass(string status)
    {
        return status switch
        {
            "Confirmed" => "pending",
            "Preparing" => "preparing",
            _ => ""
        };
    }

    private string GetTimeAgo(DateTime createdAt)
    {
        var timeSpan = DateTime.Now - createdAt;
        if (timeSpan.TotalMinutes < 1) return "Just now";
        if (timeSpan.TotalMinutes < 60) return $"{(int)timeSpan.TotalMinutes}m ago";
        if (timeSpan.TotalHours < 24) return $"{(int)timeSpan.TotalHours}h ago";
        return createdAt.ToString("MMM dd, HH:mm");
    }

    public async ValueTask DisposeAsync()
    {
        if (_hubConnection is not null)
        {
            await _hubConnection.DisposeAsync();
        }
    }
}
