@using RestaurantApp.Web.Services
@inject NotificationService NotificationService
@inject SidebarService SidebarService
@inject NavigationManager Navigation
@inject IJSRuntime JS
@rendermode InteractiveServer

<header class="top-navbar">
    <div class="navbar-left">
        <button class="mobile-toggle d-lg-none" @onclick="SidebarService.ToggleMobile">
            <i class="bi bi-list"></i>
        </button>
        <div class="search-box d-none d-md-flex">
            <i class="bi bi-search"></i>
            <input type="text" placeholder="Search orders..." @bind="SearchQuery" @onkeypress="HandleKeyPress" />
        </div>
    </div>

    <div class="navbar-right">
        <button class="navbar-btn" @onclick="ToggleTheme" title="Toggle Theme">
            <i class="bi @(IsDarkMode ? "bi-sun" : "bi-moon")"></i>
        </button>
        
        <div class="notification-dropdown">
            <button class="navbar-btn" @onclick="NotificationService.ClearNotifications">
                <i class="bi bi-bell"></i>
                @if (NotificationService.NotificationCount > 0)
                {
                    <span class="notification-badge">@NotificationService.NotificationCount</span>
                }
            </button>
        </div>

        <div class="user-dropdown">
            <button class="user-btn" @onclick="ToggleUserDropdown">
                <div class="user-avatar">
                    <i class="bi bi-person"></i>
                </div>
                <span class="user-name d-none d-md-inline">Admin</span>
                <i class="bi bi-chevron-down"></i>
            </button>
            @if (UserDropdownOpen)
            {
                <div class="dropdown-menu-list">
                    <NavLink class="dropdown-item" href="/admin/settings">
                        <i class="bi bi-gear"></i> Settings
                    </NavLink>
                    <hr />
                    <form action="/admin/logout" method="post" class="m-0">
                        <AntiforgeryToken />
                        <button type="submit" class="dropdown-item logout border-0 bg-transparent w-100 text-start">
                            <i class="bi bi-box-arrow-right"></i> Logout
                        </button>
                    </form>
                </div>
            }
        </div>
    </div>
</header>

@code {
    private bool IsDarkMode { get; set; } = false;
    private bool UserDropdownOpen { get; set; } = false;

    private async Task ToggleTheme()
    {
        IsDarkMode = !IsDarkMode;
        await JS.InvokeVoidAsync("themeManager.setTheme", IsDarkMode);
    }

    private void ToggleUserDropdown() => UserDropdownOpen = !UserDropdownOpen;

    private string SearchQuery { get; set; } = "";

    private void HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !string.IsNullOrWhiteSpace(SearchQuery))
        {
            Navigation.NavigateTo($"/admin/orders?search={Uri.EscapeDataString(SearchQuery)}");
            SearchQuery = "";
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                var savedTheme = await JS.InvokeAsync<string>("localStorage.getItem", "admin-theme");
                if (!string.IsNullOrEmpty(savedTheme))
                {
                    IsDarkMode = savedTheme == "dark";
                    StateHasChanged();
                }
                
                await JS.InvokeVoidAsync("themeManager.initTheme");
            }
            catch
            {
                // Ignore errors during prerendering
            }
        }
    }
}
